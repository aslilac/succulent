{
	"name": "succulent",
	"author": "McKayla Washburn <mckayla@hey.com>",
	"license": "MIT",
	"version": "0.15.0",
	"description": "Powerful and easy runtime type checking",
	"keywords": [
		"typescript",
		"type checking",
		"validation",
		"types",
		"type safety",
		"runtypes"
	],
	"main": "target/main.js",
	"module": "target/module/main.js",
	"types": "target/main.d.ts",
	"repository": "https://github.com/aslilac/succulent",
	"files": [
		"target/**"
	],
	"devDependencies": {
		"@mckayla/prettier": "^1.0.1",
		"@mckayla/tsconfig": "^1.0.2",
		"@types/jest": "^27.0.3",
		"eslint": "^8.3.0",
		"eslint-config-mckayla": "^1.0.4",
		"jest": "^27.4.5",
		"prettier": "^2.5.1",
		"ts-jest": "^27.1.2",
		"typescript": "^4.5.4"
	},
	"scripts": {
		"build": "npm run build:cjs -s && npm run build:esm -s",
		"build:cjs": "tsc -p tsconfig.build.json --module commonjs --declaration",
		"build:esm": "tsc -p tsconfig.build.json --module esnext --outdir target/module",
		"fmt": "prettier --ignore-path .gitignore --write .",
		"lint": "eslint .",
		"prepack": "npm run build -s",
		"test": "jest",
		"type-check": "tsc -p . --noEmit"
	}
}
