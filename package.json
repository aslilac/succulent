{
	"name": "succulent",
	"author": "McKayla Washburn <mckayla@hey.com>",
	"license": "MIT",
	"version": "0.12.0",
	"description": "Super simple data validation",
	"main": "target/main.js",
	"module": "target/module/main.js",
	"types": "target/main.d.ts",
	"repository": "https://github.com/partheseas/succulent",
	"files": [
		"target/**"
	],
	"devDependencies": {
		"@mckayla/prettier": "^2.0.0",
		"@mckayla/tsconfig": "^4.3.0",
		"@types/jest": "^27.0.3",
		"jest": "^27.3.1",
		"prettier": "^2.4.1",
		"ts-jest": "^27.0.7",
		"typescript": "^4.5.2"
	},
	"scripts": {
		"build": "npm run build:cjs && npm run build:esm",
		"build:cjs": "tsc -p tsconfig.build.json --module commonjs --declaration",
		"build:esm": "tsc -p tsconfig.build.json --module esnext --outdir target/module",
		"fmt": "prettier --ignore-path .gitignore --write .",
		"prepack": "npm run build",
		"test": "jest"
	}
}
